<p id="notice"><%= notice %></p>

<h1>Cars</h1>
<h2><%= @mensagem %></h2>
<table>
  <thead>
    <tr>
      <th>Plate</th>
      <th>Year</th>
      <th>Model</th>
      <th>Doors</th>
      <th>Date of fabrication</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.plate %></td>
        <td><%= car.year %></td>
        <td><%= car.model %></td>
        <td><%= car.doors %></td>
        <td><%= car.date_of_fabrication %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

